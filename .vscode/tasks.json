{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/Marlin"
    },
    "tasks": [
        {
            "label": "marlin",
            "type": "shell",
            "command": "bash",
            "args": [
                "--login",
                "-c",
                "\"cd -; make\""
            ],
            "problemMatcher": "$gcc",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "bash",
            "args": [
                "--login",
                "-c",
                "\"cd -; make clean\""
            ],
            "problemMatcher": "$gcc"
        }
    ]
}